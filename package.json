{
  "name": "hot-lime",
  "version": "1.0.0",
  "scripts": {
    "dev": "electron-esbuild dev",
    "build": "electron-esbuild build",
    "package": "electron-builder"
  },
  "devDependencies": {
    "@types/node": "^16.9.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "electron": "^15.0.0",
    "electron-builder": "^22.11.7",
    "electron-esbuild": "3.x",
    "electron-util": "^0.17.2",
    "esbuild": "0.x",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.3"
  },
  "build": {
    "appId": "io.comp.myapp",
    "productName": "Hot-Lime",
    "extraMetadata": {
      "name": "hotline-electron",
      "main": "main.js"
    },
    "files": [
      {
        "from": ".",
        "filter": [
          "package.json"
        ]
      },
      {
        "from": "dist/main"
      },
      {
        "from": "dist/renderer"
      }
    ],
    "win": {
      "target": [
        "zip"
      ]
    },
    "mac": {
      "target": [
        "zip"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ]
    },
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.7.1",
    "bootstrap": "5.1.3",
    "electron-store": "^8.0.1",
    "iconutil": "^1.0.2",
    "immer": "^9.0.7",
    "react-bootstrap": "^2.0.3",
    "react-redux": "^7.2.6",
    "react-router": "^6.1.1"
  }
}
